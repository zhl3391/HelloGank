<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.zhl.hellogank">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".GankApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".business.activity.SplashActivity"
                  android:theme="@style/FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".business.activity.MainActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".business.activity.WebActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".business.activity.PreviewActivity"
                  android:theme="@style/PreView"
                  android:screenOrientation="portrait"/>

    </application>

</manifest>